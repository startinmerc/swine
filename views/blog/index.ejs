<%include ../partials/header.ejs%>

<main class="container blogs">
	<section class="row">
		<div class="col-12">
			<h1 class="display-1">Swine Blog</h1>
			<p>Our company blog</p>
		</div>
	</section>
	
	<section class="row flex-column-reverse">
		<%blogs.forEach((blog) => {%>
			<div class="col-12 col-lg-6 mx-lg-auto">
				<div class="card mb-3">
					<img class="card-img-top" 
						src="<%=blog.image.src%>" 
						alt="<%=blog.image.alt%>">
					<div class="card-body pb-0">
						<a href="blog/<%=blog._id%>"><h3 class="card-title"><%=blog.title%></h3></a>
						<p class="card-body text-truncate"><%=blog.body%></p>
					</div>
					<div class="card-footer text-muted text-center">
						Created <%=blog.date%>
					</div>
				</div>
			</div>
		<%});%>
	</section>

<%include ../partials/footer.ejs%>