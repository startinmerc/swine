<%include ../partials/header.ejs%>

<main class="container">
	<div class="row pt-5">
		<h1 class="mx-auto">New Blog</h1>
	</div>

	<div class="row mb-5">
		<div class="col-12">
			<form  class="row" action="/blog" method="POST">
				<div class="form-group col-12">
					<label for="title">Title</label>
					<input class="form-control" type="text" name="title" placeholder="Title" id="title">
				</div>
				<div class="form-group col-12">
					<label for="img-src">Image Link</label>
					<input class="form-control" type="text" name="imgSrc" placeholder="Image Link" id="imgSrc">
				</div>
				<div class="form-group col-12">
					<label for="img-alt">Image Caption</label>
					<input class="form-control" type="text" name="imgAlt" placeholder="Image Caption" id="imgAlt">
				</div>
				<div class="form-group col-12">
					<label for="body">Body</label>
					<textarea class="form-control" type="text" name="body" placeholder="Body" id="body" rows="4"></textarea>
				</div>
				<button type="submit" class="btn btn-primary mx-auto w-50">Submit</button>
			</form>
		</div>
	</div>

<%include ../partials/footer.ejs%>